<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/etarray"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789."
            android:hint="Enter the size of array"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff0f87" />

        <RadioGroup
            android:id="@+id/algoSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/btnBestCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Best Case"
                android:layout_marginLeft="20dp"
                android:textColor="#a026ff" />

            <RadioButton
                android:id="@+id/btnAverageCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Average Case"
                android:layout_marginLeft="20dp"
                android:textColor="#a026ff" />

            <RadioButton
                android:id="@+id/btnWorstCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Worst Case"
                android:layout_marginLeft="20dp"
                android:textColor="#a026ff" />

        </RadioGroup>

        <Button
            android:id="@+id/btnGenerateArray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:text="Gernerate Array"
            android:textColor="#5d2cff" />

        <TextView
            android:id="@+id/tvMessageDisplay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff1209" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.89"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAlgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Choose Algorithm"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff1209"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvTimeTaken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_row="0"
                android:text="Time taken by each algorithm"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ff1209"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnBubbleSort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:enabled="false"
                android:text="Bubble Sort"
                android:textColor="#5d2cff" />

            <TextView
                android:id="@+id/tvBubbleSortTime"
                android:layout_width="150dp"
                android:layout_height="26dp"
                android:layout_column="1"
                android:hint="Status"
                android:layout_gravity="right"
                android:layout_row="1"
                android:textColor="#ff1209" />

            <Button
                android:id="@+id/btnSelectionSort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:enabled="false"
                android:text="Selection Sort"
                android:textColor="#5d2cff" />

            <TextView
                android:id="@+id/tvSelectionSortTime"
                android:layout_width="150dp"
                android:layout_height="26dp"
                android:layout_column="1"
                android:hint="Status"
                android:layout_gravity="right"
                android:layout_row="2"
                android:textColor="#ff1209" />

            <Button
                android:id="@+id/btnInsertionSort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:enabled="false"
                android:text="Insertion Sort"
                android:textColor="#5d2cff" />

            <TextView
                android:id="@+id/tvInsertionSortTime"
                android:layout_width="150dp"
                android:layout_height="26dp"
                android:layout_column="1"
                android:hint="Status"
                android:layout_gravity="right"
                android:layout_row="3"
                android:textColor="#ff1209" />

            <Button
                android:id="@+id/btnQuickSort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:enabled="false"
                android:text="Quick Sort"
                android:textColor="#5d2cff" />

            <TextView
                android:id="@+id/tvQuickSortTime"
                android:layout_width="150dp"
                android:layout_height="26dp"
                android:hint="Status"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_row="4"
                android:textColor="#ff1209" />

            <Button
                android:id="@+id/btnMergeSort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:enabled="false"
                android:text="Merge Sort"
                android:textColor="#5d2cff" />

            <TextView
                android:id="@+id/tvMergeSortTime"
                android:layout_width="150dp"
                android:layout_height="26dp"
                android:hint="Status"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_row="5"
                android:textColor="#ff1209" />

        </GridLayout>

        <Button
            android:id="@+id/btnBenchmarkAll"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:text="Benchmark All"
            android:textColor="#5d2cff" />

    </LinearLayout>

</LinearLayout>