<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="myapplication.bits.SplashScreenActivity"
    android:background="#551a8b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Splash Screen"
        android:id="@+id/tvSplash" />

    <ImageView
        android:src="@drawable/windows"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivElectricity"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/tvSplash"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="50dp"

        android:text="Welcome to Windows phone"
        android:id="@+id/tvMessage"
        android:layout_below="@+id/ivElectricity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp" />

</RelativeLayout>
