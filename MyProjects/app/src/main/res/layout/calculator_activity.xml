<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etnum1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:digits="0123456789."
        android:ems="10"
        android:hint="Enter First Number"
        android:inputType="numberDecimal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etnum2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etnum1"
        android:digits="0123456789."
        android:ems="10"
        android:hint="Enter Second Number"
        android:inputType="numberDecimal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btAdd"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etnum2"
        android:background="#ff9735"
        android:text="+" />

    <Button
        android:id="@+id/btSub"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btAdd"
        android:layout_below="@id/etnum2"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/btAdd"
        android:layout_toRightOf="@+id/btAdd"
        android:background="#ff9735"
        android:shadowColor="#ffc5e9"
        android:text="-" />

    <Button
        android:id="@+id/btDiv"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etnum2"
        android:layout_centerHorizontal="true"
        android:background="#ff9735"
        android:text="/" />

    <Button
        android:id="@+id/btMul"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btDiv"
        android:layout_below="@id/etnum2"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/btDiv"
        android:layout_toRightOf="@+id/btDiv"
        android:background="#ff9735"
        android:text="*" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:hint="Result will be diplayed here"
        android:textColor="#ff9735"
        android:textSize="25dp" />


</RelativeLayout>