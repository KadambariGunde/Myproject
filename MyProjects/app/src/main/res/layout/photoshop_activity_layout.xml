<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="myapplication.bits.PhotoshopActivity">

    <ImageView
        android:id="@+id/ivResult"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/nature"
        android:layout_weight="0.10" />


    <HorizontalScrollView
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/ibGrayScale"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="#d3d3d3" />

            <ImageButton
                android:id="@+id/ibBright"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/ibOriginal"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/ibDark"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/ibRed"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/ibBlacknWhite"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/ibGreen"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp" />

            <ImageButton
                android:id="@+id/ibBlue"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibGallery"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="bottom"
                android:src="@drawable/gallary" />

            <ImageButton
                android:id="@+id/ibCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera" />

            <ImageButton
                android:id="@+id/ibGalleryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filesave" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
